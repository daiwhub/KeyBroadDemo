<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_keybroad_change_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/blue"
        android:text="数"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/litem_keybroad_change_ine"/>

    <View
        android:id="@+id/litem_keybroad_change_ine"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/blue"
        android:rotation="134.5"
        app:layout_constraintTop_toBottomOf="@id/item_keybroad_change_number_tv"
        app:layout_constraintBottom_toTopOf="@id/item_keybroad_change_english_tv"
        app:layout_constraintLeft_toLeftOf="@id/item_keybroad_change_number_tv"
        app:layout_constraintRight_toRightOf="@id/item_keybroad_change_english_tv"/>

    <TextView
        android:id="@+id/item_keybroad_change_english_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/blue_light"
        android:text="英"
        app:layout_constraintLeft_toRightOf="@id/item_keybroad_change_number_tv"
        app:layout_constraintTop_toBottomOf="@id/litem_keybroad_change_ine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="top"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>