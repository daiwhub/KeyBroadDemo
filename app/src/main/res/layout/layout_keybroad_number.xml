<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="7dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp">

    <Button
        android:id="@+id/layout_keybroad_1_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_item_keybroad_sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintRight_toLeftOf="@id/layout_keybroad_2_btn"
        app:layout_constraintBottom_toTopOf="@id/layout_keybroad_4_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/layout_keybroad_2_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_keybroad_1_btn"
        android:layout_marginLeft="5dp"
        android:text="2"
        android:textColor="@color/blue"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/layout_keybroad_1_btn"
        app:layout_constraintRight_toLeftOf="@id/layout_keybroad_3_btn"
        app:layout_constraintTop_toTopOf="@id/layout_keybroad_1_btn" />


    <Button
        android:id="@+id/layout_keybroad_3_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_keybroad_1_btn"
        android:layout_marginLeft="5dp"
        android:text="3"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/layout_keybroad_2_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_keybroad_1_btn" />

    <Button
        android:id="@+id/layout_keybroad_4_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@id/layout_keybroad_7_btn"
        app:layout_constraintRight_toLeftOf="@id/layout_keybroad_5_btn"
        app:layout_constraintTop_toBottomOf="@id/layout_keybroad_1_btn" />

    <Button
        android:id="@+id/layout_keybroad_5_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_keybroad_4_btn"
        android:layout_marginLeft="5dp"
        android:text="5"
        android:textColor="@color/blue"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/layout_keybroad_4_btn"
        app:layout_constraintRight_toLeftOf="@id/layout_keybroad_6_btn"
        app:layout_constraintTop_toTopOf="@id/layout_keybroad_4_btn" />


    <Button
        android:id="@+id/layout_keybroad_6_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_keybroad_4_btn"
        android:layout_marginLeft="5dp"
        android:text="6"
        android:textColor="@color/blue"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/layout_keybroad_5_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_keybroad_4_btn" />

    <Button
        android:id="@+id/layout_keybroad_7_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@id/layout_keybroad_state_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_keybroad_8_btn"
        app:layout_constraintTop_toBottomOf="@id/layout_keybroad_4_btn" />

    <Button
        android:id="@+id/layout_keybroad_8_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_keybroad_7_btn"
        android:layout_marginLeft="5dp"
        android:text="8"
        android:textColor="@color/blue"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/layout_keybroad_7_btn"
        app:layout_constraintRight_toLeftOf="@id/layout_keybroad_9_btn"
        app:layout_constraintTop_toTopOf="@id/layout_keybroad_7_btn" />


    <Button
        android:id="@+id/layout_keybroad_9_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_keybroad_7_btn"
        android:layout_marginLeft="5dp"
        android:text="9"
        android:textColor="@color/blue"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/layout_keybroad_8_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_keybroad_7_btn" />

    <daiw.com.keybroaddemo.custom.ItemKeyBroadChange
        android:id="@+id/layout_keybroad_state_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_keybroad_0_btn"
        app:layout_constraintTop_toBottomOf="@id/layout_keybroad_7_btn" />

    <Button
        android:id="@+id/layout_keybroad_0_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:text="0"
        android:textColor="@color/blue"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@id/layout_keybroad_state_btn"
        app:layout_constraintLeft_toRightOf="@id/layout_keybroad_state_btn"
        app:layout_constraintRight_toLeftOf="@id/layout_keybroad_delete_btn"
        app:layout_constraintTop_toTopOf="@id/layout_keybroad_state_btn" />


    <LinearLayout
        android:id="@+id/layout_keybroad_delete_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_keybroad_state_btn"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textColor="@color/blue"
        android:background="@drawable/bg_item_keybroad_sp"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/layout_keybroad_0_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_keybroad_state_btn" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_delete"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>